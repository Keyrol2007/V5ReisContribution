<!-- Views/Home/Index.cshtml -->
@{
    ViewData["Title"] = "Home";
}
<div class="row align-items-center g-4">
    <div class="col-lg-6">
        <h1 class="display-5 fw-bold">1rst Event: Fun Walk</h1>
        <p class="lead" style="font-size: 95%;">This ticket sale is a fundraising for my VWO5 Studiereis 2025-2026 to the Netherlands, organized by Colegio Arubano. This first event is a "Fun Walk" (caminata) of 5km on the 6th of December from parkinglot di Alhambra.</p>
        <p class="lead"> Get your tickets, see promos, and share the event with QR codes.</p>
        <div class="d-flex gap-2">
            <a class="btn btn-primary btn-lg" href="/Home/Tickets"><i class="bi bi-ticket-perforated"></i> Buy Tickets</a>
            <a class="btn btn-outline-secondary btn-lg" href="/Home/Media"><i class="bi bi-play-circle"></i> Promo Videos</a>
        </div>
    </div>
    <div class="col-lg-6 text-center">
        <img src="/images/poster tickets caminata.jpg" alt="Ticket Event Poster" class="img-fluid rounded shadow" style="width: 50%;" />
       
    </div>
</div>

<hr class="my-5" />

<div class="row g-4">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-cash-coin"></i> Easy Payment</h5>
                <p class="card-text">Contact me first. <br> Pay via bank transfer or cash. </p>
                <a href="/Home/Tickets" class="btn btn-outline-primary">See ticket info</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-camera-video"></i> Promo Media</h5>
                <p class="card-text">Watch the promotional videos and share them with friends or family.</p>
                <a href="/Home/Media" class="btn btn-outline-primary">Open media</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-qr-code"></i> QR Codes</h5>
                <p class="card-text">Get & Share the QRs to visit the website or for the the promo posters/videos.</p>
                <a href="/Home/Tickets#qr" class="btn btn-outline-primary">Get QR codes</a>
            </div>
        </div>
    </div>
</div>
