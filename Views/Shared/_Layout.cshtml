<!-- Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - V5-Reis Tickets </title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Icons -->
   <link rel="icon" href="Imagen1.ico">
    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">Karol V5 Reis- Tickets</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav id="mainNav" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Tickets">Tickets</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Media">Media</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Sponsors">Sponsors & Partnership</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-light py-3 mt-auto">
        <div class="container d-flex justify-content-between">
            <span>&copy; @DateTime.Now.Year Karol RG</span>
            <span>
                <a href="/Home/Contact" class="text-light text-decoration-none">
                    <i class="bi bi-envelope"></i> Contact
                </a>
            </span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
