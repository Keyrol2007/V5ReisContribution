@{
    ViewData["Title"] = "Sponsors & Partnership";
}
<div class="row g-4">
    <div class="col-lg-7">
        <h1 class="fw-bold">Sponsors &amp; Partnership</h1>
        <p class="lead">We welcome sponsors and partners to support our event!</p>
        <ul class="list-group mb-3">
            <li class="list-group-item">Promote your brand to a vibrant school community.</li>
            <li class="list-group-item">Custom partnership packages available.</li>
            <li class="list-group-item">Get featured on our event materials and website.</li>
        </ul>
        <h5>Contact for Sponsorship</h5>
        <div class="alert alert-info">
            <strong>Email:</strong> <a href="mailto:eventsponsor@example.com">eventsponsor@example.com</a><br />
            <strong>Phone:</strong> +297 123 4567
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-people-fill"></i> Our Sponsors</h5>
                <p class="card-text mb-1">Thank you to our generous sponsors:</p>
                <ul class="list-unstyled mb-0">
                    <li><img src="/images/sponsor1-logo.png" alt="Sponsor 1" style="height:40px;" /> Sponsor 1</li>
                    <li><img src="/images/sponsor2-logo.png" alt="Sponsor 2" style="height:40px;" /> Sponsor 2</li>
                </ul>
                <p class="text-muted mt-2">Add your logo by placing it in <code>wwwroot/images</code>.</p>
            </div>
        </div>
    </div>
</div>
