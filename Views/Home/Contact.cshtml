<!-- Views/Home/Contact.cshtml -->
@{
    ViewData["Title"] = "Contact";
}
<div class="row g-4">
    <div class="col-lg-7">
        <h1 class="fw-bold">Contact</h1>
        <p>If you have questions about tickets or the event, reach out:</p>
        <ul class="list-unstyled">
            <li class="mb-2"><i class="bi bi-envelope"></i> Email: <a href="mailto:karol@example.com">karol@example.com</a></li>
            <li class="mb-2"><i class="bi bi-telephone"></i> Phone: +297-000-0000</li>
            <li class="mb-2"><i class="bi bi-instagram"></i> Instagram: <a href="https://instagram.com/karol_event" target="_blank">karol_event</a></li>
        </ul>

        <h5 class="mt-4">Share the website</h5>
        <p>Scan this QR to open the homepage:</p>
        <img class="qr img-thumbnail" src="/images/site-qr.png" alt="Site QR" />
    </div>

    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-geo-alt"></i> Event Location</h5>
                <p class="card-text">Your school address here.</p>
                <a class="btn btn-outline-primary" target="_blank" href="https://maps.google.com/">Open in Maps</a>
            </div>
        </div>
    </div>
</div>
